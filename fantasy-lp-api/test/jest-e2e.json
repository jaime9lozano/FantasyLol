{
  "moduleFileExtensions": ["ts", "js", "json"],
  "rootDir": "../",
  "testMatch": [
    "<rootDir>/test/**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      { "tsconfig": "<rootDir>/tsconfig.spec.json" }
    ]
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1",
    "^test/(.*)$": "<rootDir>/test/$1"
  },
  "testEnvironment": "node",
  "setupFiles": ["dotenv/config"],
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "maxWorkers": 1
}
